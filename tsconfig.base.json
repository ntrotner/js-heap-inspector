{
  "compileOnSave": true,
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ],
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": false,
    "declaration": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "ES2022",
      "ES2022.Array",
      "ES2022.Intl",
      "ES2022.String",
      "ES2022.Object"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/",
    "removeComments": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "preserveWatchOutput": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@js-heap-inspector/common": [
        "packages/@js-heap-inspector-lib/common/public_api.ts"
      ],
      "@js-heap-inspector/core": [
        "packages/@js-heap-inspector-lib/core/public_api.ts"
      ],
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  }
}
